<Window x:Class="RadishPublicProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadishPublicProject"
        mc:Ignorable="d"
        Title="Запретное слово" Height="450" Width="800" FontFamily="Bitter Thin" Icon=".\Assets\Images\icon.png">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Введите что-то(без слова редиска),текст изменится" Margin="0,150,0,10" HorizontalAlignment="Center"/>
            <TextBox x:Name="RadishTextBox" Focusable="True" />
            <Button x:Name="ActiveButton" Click="ActiveButtonClick" Content="Введите свой текст" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
